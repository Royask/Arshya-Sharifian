/*
This program completes the same action in two separate and distinguishable ways;
first, it stores values from a file into parallel arrays and outputs the
information to the user; second, it stores values into an array of structures,
and again, output the information to the user.  Here, we are performing the
same tasks in two unique ways.
*/
//Pre-Processing 
#include <iostream>
#include <string>
#include <fstream>
using namespace std;

///////////////////////////////////////////////////////////////////////////////
//Structure Declaration
struct profile {
	int age;
	string name;
};
///////////////////////////////////////////////////////////////////////////////
//Function Prototypes
void openFile(ifstream&, string &, bool &);
void getParallelData(ifstream&, string, int*, string*, int &);
int searchParallel(int*, string *, int &);
void outputParallel(ifstream &, int *, string *, int);
void getStructData(ifstream&, string, profile *, int &);
int searchStruct(profile *, int &);
void outputStruct(ifstream &, profile *, int);
///////////////////////////////////////////////////////////////////////////////
int main() {
///////////////////////////////////////////////////////////////////////////////	
	//Variables Declaration and Initialization
	ifstream fin;
	profile person[10];
	string file_name, read_file, name[10];
	int age[10], index = 0, index_max_age = 0;
	bool first_loop = true;
///////////////////////////////////////////////////////////////////////////////
	//FUNCTION CALL
	openFile(fin, file_name, first_loop);
	getParallelData(fin, read_file, age, name, index);
	index_max_age = searchParallel(age, name, index);
	outputParallel(fin, age, name, index_max_age);
	openFile(fin, file_name, first_loop);
	getStructData(fin, read_file, person, index);
	index_max_age = searchStruct(person, index);
	outputStruct(fin, person, index_max_age);
///////////////////////////////////////////////////////////////////////////////	
	return 0;
//END MAIN
}
///////////////////////////////////////////////////////////////////////////////
/*
The openFile function asks the user for the name of the file they wish to open
and attempts to open the file.  If the file name is not found, then the program
is terminated.  The program only asks for the name of file on the first loop.
*/
void openFile(ifstream & fin, string & file_name, bool & first_loop) {
	if (first_loop){
		cout << "Please enter the name of the file you wish to open:  " << endl;
		cin >> file_name;
		first_loop = false;
	//end if first loop
	}
	fin.open(file_name.c_str());
	//if the file is not found, exit the program
	if (!fin) {
		cout << "file not found, exiting program" << endl;
		exit(0);
	//end if not fin
	}
//End function openFile
}
///////////////////////////////////////////////////////////////////////////////
/*
The getParallelData function simply stores information from the opened file
into two parallel arrays for later use.  We also determine the number of
profiles in the file using index.
*/
void getParallelData(ifstream & fin, string read_file, 
					 int * age, string * name, int & index) {
	//local variable
	char nextchar;
	//while there is another character in file and the index is less than 10
	while (fin >> nextchar && index < 10) {
		fin.putback(nextchar);
		getline(fin, name[index]);
		fin >> age[index];
		index++;	
	//end while
	}
//end function getParallelData
}
///////////////////////////////////////////////////////////////////////////////
/*
Here, we are searching through the various values held in the parallel array
and determining which person is the oldest.  The index value of the oldest
person is then sent back to main for future use.
*/
int searchParallel(int * age, string * name, int & index) {
	//local variables
	int max_age = 0, index_max_age = 0;
	//searching the array for largest age
	for (int i = 0; i < index; i++) {
		if (age[i] > max_age) {
			max_age = age[i];
			index_max_age = i;
		//end if age
		}
	//end for loop
	}
	return index_max_age;
	//end function searchParallel
}
///////////////////////////////////////////////////////////////////////////////
/*
The function outputParallel prints the name and age of the oldest person.
*/
void outputParallel(ifstream & fin, int * age, 
					string * name, int index_max_age) {
	cout << name[index_max_age] << " is the oldest at "
		<< age[index_max_age] << endl;
	fin.close();
//end function outputParallel
}
///////////////////////////////////////////////////////////////////////////////
/*
The getStructData function reads through the user inputed file name and stores
values inside the structure array.
*/
void getStructData(ifstream & fin, string read_file, profile * person, int & index) {
	//local variable
	char nextchar;
	//resetting index back to 0
	index = 0;
	//while there is another characters and index is less than 10
	while (fin >> nextchar && index < 10) {
		fin.putback(nextchar);
		getline(fin, person[index].name);
		fin >> person[index].age;
		index++;
	//end while
	}
//end function getStructData
}
///////////////////////////////////////////////////////////////////////////////
/*
The searchStruct function searches through the structure array and determines
who is the oldest person in the file.
*/
int searchStruct(profile * person, int & index) {
	//local variables
	int max_age = 0, index_max_age = 0;
	//searching for the oldeest person
	for (int i = 0; i < index; i++) {
		if (person[i].age > max_age) {
			max_age = person[i].age;
			index_max_age = i;
		//end if person
		}
	//end for loop
	}
	//returnining the position of the oldest person in the array
	return index_max_age;
//end searchStruct function	
}
///////////////////////////////////////////////////////////////////////////////
/*
The outputStruct functions prints the name and age of the oldest person in the
file.
*/
void outputStruct(ifstream & fin, profile * person, int index_max_age) {
	cout << person[index_max_age].name << " is the oldest at "
		<< person[index_max_age].age << endl;
	fin.close();
//end outputStruct function
}
///////////////////////////////////////////////////////////////////////////////
//END FUNCTIONS
